<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper	namespace="com.iteason.mapper.TbItemSolrMapper">
	<select id="selectTbItemSolrResultList" resultType="com.iteason.pojo.TbItemSolrResult">
		SELECT
		  i.id,
		  i.title,
		  i.sell_point,
		  i.price,
		  i.image,
		  c.name category_name
		FROM
		  tb_item i
		  LEFT JOIN tb_item_cat c
		  ON i.cid = c.id
		WHERE i.status = '1'
	</select>
	
	<select id="selectTbItemSolrResult" resultType="com.iteason.pojo.TbItemSolrResult">
		SELECT
		  i.id,
		  i.title,
		  i.sell_point,
		  i.price,
		  i.image,
		  c.name category_name
		FROM
		  tb_item i
		  LEFT JOIN tb_item_cat c
		  ON i.cid = c.id
		WHERE i.status = '1'
	</select>
</mapper>